<launch>
  <node pkg="hgbot_infra" type="bt_joy" name="bt_joy" output="screen">
  </node>
  <!-- joy node -->
  <node respawn="true" pkg="joy"
        type="joy_node" name="joy" >
    <param name="dev" type="string" value="/dev/input/js0" />
    <param name="deadzone" value="0.12" />
  </node>
  <node respawn="true" pkg="teleop_twist_joy"
        type="teleop_node" name="teleop" >
  </node>
</launch>
